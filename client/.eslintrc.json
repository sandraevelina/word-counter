{
  "env": {
    "cypress/globals": true,
    "browser": true,
    "es2021": true
  },
  "parser": "babel-eslint",
  "extends": [
    "plugin:react/recommended",
    "plugin:testing-library/react",
    "plugin:cypress/recommended",
    "airbnb",
    "prettier",
    "stylelint"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier", "cypress", "jest"],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(test).[jt]s?(x)"],
      "env": {
        "jest": true
      }
    }
  ],
  "settings": {
    "jest": {
      "version": 26
    }
  }
}
